<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".SigninScreen">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_arrow"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        />
    <ImageView
        android:id="@+id/signIn_main_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/signin_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/signin_sub_text"
        android:layout_alignBottom="@+id/signIn_main_Text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-35dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:orientation="vertical"
        android:background="@drawable/upper_layer">


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            app:startIconDrawable="@drawable/email_logo"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="@color/white"
            app:boxCornerRadiusTopEnd="30dp"
            app:boxCornerRadiusBottomStart="30dp"
            app:boxCornerRadiusBottomEnd="30dp"
            app:boxCornerRadiusTopStart="30dp"
            android:hint="@string/email"
            app:helperText="Required*"
            app:counterEnabled="true"
            app:counterMaxLength="25"
            app:endIconMode="clear_text"
            app:helperTextTextColor="@color/black"
            app:hintTextColor="@color/black"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="240dp"
                android:layout_height="49dp"
                android:maxLength="26"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/passwordFiled"
            android:layout_marginTop="115dp"
            app:startIconDrawable="@drawable/password_icon"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="@color/white"
            app:boxCornerRadiusTopEnd="30dp"
            app:boxCornerRadiusBottomStart="30dp"
            app:boxCornerRadiusBottomEnd="30dp"
            app:boxCornerRadiusTopStart="30dp"
            android:hint="@string/password"
            app:helperText="Required*"
            app:counterEnabled="true"
            app:counterMaxLength="16"
            app:endIconMode="password_toggle"

            app:helperTextTextColor="@color/black"
            app:hintTextColor="@color/black"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="240dp"
                android:layout_height="49dp"
                android:maxLength="17"
                android:inputType="numberPassword"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/small_circle_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/signin_logo"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/passwordFiled"
            android:layout_marginBottom="-190dp"/>

       <ImageView
           android:id="@+id/signIn_Button"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/signin_button"
           android:layout_centerHorizontal="true"
           android:layout_alignParentBottom="true"
           android:layout_marginVertical="115dp"
           />

       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/signin_with_text"
           android:layout_centerHorizontal="true"
           android:layout_alignParentBottom="true"
           android:layout_marginVertical="77dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/go_in_fb"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="50dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/register_now"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="10dp"/>


    </RelativeLayout>

</RelativeLayout>