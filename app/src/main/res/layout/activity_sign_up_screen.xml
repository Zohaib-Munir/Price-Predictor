<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".SignUp_Screen">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_up_screen_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:background="@drawable/upper_layer">

       <com.google.android.material.textfield.TextInputLayout
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="30dp"
           app:startIconDrawable="@drawable/person_icon"
           app:boxBackgroundColor="@color/white"
           app:boxStrokeColor="@color/white"
           app:boxCornerRadiusTopEnd="30dp"
           app:boxCornerRadiusBottomStart="30dp"
           app:boxCornerRadiusBottomEnd="30dp"
           app:boxCornerRadiusTopStart="30dp"
           android:hint="@string/user_name"
           app:hintTextColor="@color/black"
           >
           <com.google.android.material.textfield.TextInputEditText
               android:layout_width="240dp"
               android:layout_height="49dp"
               android:padding="16dp" />
       </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            app:startIconDrawable="@drawable/email_logo"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="@color/white"
            app:boxCornerRadiusTopEnd="30dp"
            app:boxCornerRadiusBottomStart="30dp"
            app:boxCornerRadiusBottomEnd="30dp"
            app:boxCornerRadiusTopStart="30dp"
            android:hint="@string/email"
            app:hintTextColor="@color/black"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="240dp"
                android:layout_height="49dp"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/signUp_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sign_up_button"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="115dp"/>

        <ImageView
            android:id="@+id/google_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/go_in_fb"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            />

        <ImageView
            android:id="@+id/sign_up_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sign_up_with"
            android:layout_centerHorizontal="true"
           android:layout_alignParentBottom="true"
            android:layout_marginBottom="77dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/already_have_account"
            android:background="@drawable/already_have_account"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            />

    </RelativeLayout>



</RelativeLayout>